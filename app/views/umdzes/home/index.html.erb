<p hidden id='umzde_calendar_index' class='pageName'>Umdze-<%= current_umdze.id %> Calendar</p>

<div class="container">

  <div class="columns is-centered is-multiline">
    <% spaces_view.each do |space_view| %>
    <div class="column is-full-mobile is-half-tablet is-one-third-widescreen is-centered">
      <p class="title is-6">
        <%= space_view.space_name %>
      </p>
      <%= render 'calendar', user_view: user_view, space_view: space_view,
                              calendar_view: calendar_view,
                              prev_month_path: umdzes_path(date: calendar_view.prev_month_string),
                              next_month_path: umdzes_path(date: calendar_view.next_month_string)  %>
    </div>
    <% end %>
  </div>

</div>
